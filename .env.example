# ============================================
# Kairós - Environment Configuration
# ============================================
# 
# Copy this file to .env and customize for your environment
# Values shown are defaults - uncomment and modify as needed

# ============================================
# Core Monitoring Settings
# ============================================

# Expected interval between heartbeats (seconds)
# HEARTBEAT_INTERVAL=60

# Number of consecutive misses before alert
# HEARTBEAT_ALLOWED_MISSES=3

# Tolerance window for late heartbeats (seconds)
# HEARTBEAT_TOLERANCE=0

# ============================================
# API Server Settings
# ============================================

# Server host (0.0.0.0 = all interfaces, 127.0.0.1 = localhost only)
# API_HOST=0.0.0.0

# Server port
# API_PORT=8000

# Number of uvicorn workers
# API_WORKERS=4

# ============================================
# Database Settings (Optional)
# ============================================

# Enable database persistence
# ENABLE_DATABASE=false

# PostgreSQL connection string
# Example: postgresql://user:password@localhost:5432/heartbeat
# DATABASE_URL=

# Connection pool settings
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10
# DB_POOL_TIMEOUT=30

# ============================================
# Redis Settings (Optional)
# ============================================

# Enable Redis caching
# ENABLE_REDIS=false

# Redis connection string
# Example: redis://localhost:6379/0
# REDIS_URL=

# Cache TTL (seconds)
# REDIS_TTL=3600

# Max connections
# REDIS_MAX_CONNECTIONS=10

# ============================================
# Logging Settings
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO

# Log file path (leave empty for stdout)
# LOG_FILE=

# Enable JSON structured logging
# JSON_LOGS=false

# ============================================
# Security Settings
# ============================================

# API key for authentication (REQUIRED in production!)
# API_KEY=your-secret-api-key-here

# CORS allowed origins (comma-separated)
# Use specific domains in production, not "*"
# CORS_ORIGINS=*

# Maximum file upload size (MB)
# MAX_UPLOAD_SIZE_MB=10

# ============================================
# Feature Flags
# ============================================

# Enable Prometheus metrics endpoint
# ENABLE_METRICS=true

# ============================================
# Example Configurations
# ============================================

# Development:
# LOG_LEVEL=DEBUG
# API_WORKERS=1
# ENABLE_DATABASE=false
# ENABLE_REDIS=false

# Production:
# LOG_LEVEL=INFO
# JSON_LOGS=true
# API_KEY=your-secret-key
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# ENABLE_DATABASE=true
# DATABASE_URL=postgresql://user:pass@db.example.com:5432/heartbeat
# ENABLE_REDIS=true
# REDIS_URL=redis://cache.example.com:6379/0

# ============================================
# Testing:
# LOG_LEVEL=WARNING
# API_WORKERS=1
